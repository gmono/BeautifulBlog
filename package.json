    "@types/node": "^13.1.6",
    "nightmare": "^3.0.2",
    "simple-git": "^1.131.0",
    "webpack": "^4.41.5"
  },
  "keywords": [
    "blog",
    "blogsystem",
    "static-blog",
    "static-site",
    "website",
    "theme"
  ]
}
