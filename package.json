    "art-template": "^4.13.2",
    "blessed": "^0.1.81",
    "cheerio": "^1.0.0-rc.3",
    "commander": "^4.1.0",
    "copy-dir": "^1.2.0",
    "core-decorators": "^0.20.0",
    "dateformat": "^3.0.3",
    "del": "^5.1.0",
    "delay": "^4.3.0",
    "execa": "^4.0.0",
    "fast-deep-equal": "^3.1.1",
    "front-matter": "^3.0.2",
    "fs-extra": "^8.1.0",
    "highlight": "^0.2.4",
    "highlight.js": "^9.17.1",
    "koa": "^2.11.0",
    "koa-router": "^8.0.7",
    "koa-static": "^5.0.0",
    "koa-static-router": "^1.3.0",
    "lodash": "^4.17.15",
