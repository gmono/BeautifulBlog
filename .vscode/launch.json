    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "sync",
            "program": "${workspaceFolder}/dist_server/blog.js",
            "args": ["sync","default","80"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "init",
            "program": "${workspaceFolder}/dist_server/blog.js",
            "args": ["init","tst","y"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    
        {
            "type": "node",
            "request": "launch",
            "name": "generate",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\dist_server\\blog.js",
            "args": ["generate"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}